generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") // You should use the appropriate ID type for MongoDB, like ObjectId or String
  email     String    @unique
  password  String
  firstName String
  lastName  String
  projects  Project[]
  views View[]
  @@map("users")
}

model Project {
  id         String   @id @default(auto()) @map("_id") // You should use the appropriate ID type for MongoDB, like ObjectId or String
  projectName String
  users      User[]   @relation("UserProjects", references: [id])

  @@map("projects")
}

model View {
  id      String   @id @default(auto()) @map("_id") // You should use the appropriate ID type for MongoDB, like ObjectId or String
  viewName String
  components Component[]  //bunch of component ids
  read Boolean
  write Boolean
  share Boolean
  @@map("views")
}

model Component {
  id       String    @id @default(auto()) @map("_id") // You should use the appropriate ID type for MongoDB, like ObjectId or String
  user     User[]    
  
  @@map("components")
}
